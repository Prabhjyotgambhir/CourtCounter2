<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.courtcounter2.MainActivity"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="#616161"
        android:fontFamily="sans-serif-medium"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="56sp"
        android:layout_marginTop="20dp"
       android:gravity="center_horizontal"
        android:id="@+id/teama_score"
        android:fontFamily="sans-serif-light"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="+1 points"
      android:onClick="teama_1score"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="+2 points"
        android:onClick="teama_2score"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="+3 points"
        android:onClick="teama_3score"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />


</LinearLayout>
  <TextView
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:background="@android:color/darker_gray"
      android:layout_marginTop="60dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="#616161"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="56sp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:id="@+id/teamb_score"
            android:fontFamily="sans-serif-light"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="+1 points"
            android:onClick="teamb_1score"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="+2 points"
            android:onClick="teamb_2score"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="+3 points"
            android:onClick="teamb_3score"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />
    </LinearLayout>

</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:id="@+id/reset_button"
        android:onClick="resitit"
        android:layout_marginBottom="24dp"/>
</LinearLayout>